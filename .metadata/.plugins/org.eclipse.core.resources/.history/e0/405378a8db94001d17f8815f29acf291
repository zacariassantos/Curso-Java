package OO.encapsulamento;

public class Pessoa {

	private int idade;
	
	public Pessoa(int idade) {
		setIdade(idade);
	}
	// getter
	public int getIdade() {
		return idade;
	}
	//setter
	public void setIdade( int novaIdade) {
		novaIdade = Math.abs(novaIdade); // modulo do numero
		if(novaIdade >= 0 && novaIdade <= 120 ) {
			this.idade = novaIdade;	
		}
		
	}
}
